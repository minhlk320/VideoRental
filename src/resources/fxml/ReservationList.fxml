<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ReservationManagementController">
   <children>
      <HBox alignment="CENTER" AnchorPane.bottomAnchor="12.0" AnchorPane.leftAnchor="12.0" AnchorPane.rightAnchor="12.0" AnchorPane.topAnchor="12.0">
         <children>
            <AnchorPane>
               <children>
                  <VBox AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                     <children>
                        <Text fx:id="lbItemID" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Customer ID">
                           <VBox.margin>
                              <Insets top="24.0" />
                           </VBox.margin>
                        </Text>
                        <HBox>
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                           <children>
                              <TextField fx:id="tf_customerID" focusTraversable="false" promptText="Enter Customer ID" style="-fx-background-color: #4f81bc;" />
                              <JFXButton fx:id="btnEnter" text="Enter" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  <HBox alignment="BOTTOM_CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                     <children>
                        <JFXButton fx:id="btnBack" contentDisplay="TOP" focusTraversable="false" text="Back">
                           <graphic>
                              <FontAwesomeIcon fill="WHITE" glyphName="ARROW_LEFT" />
                           </graphic>
                           <HBox.margin>
                              <Insets right="12.0" />
                           </HBox.margin>
                        </JFXButton>
                        <JFXButton fx:id="btnNew" contentDisplay="TOP" focusTraversable="false" text="New">
                           <graphic>
                              <FontAwesomeIcon fill="WHITE" glyphName="PLUS" />
                           </graphic>
                           <HBox.margin>
                              <Insets right="12.0" />
                           </HBox.margin>
                        </JFXButton>
                        <JFXButton fx:id="btnCancelReservation" contentDisplay="TOP" focusTraversable="false" text="Cancel Reservation">
                           <graphic>
                              <FontAwesomeIcon fill="WHITE" glyphName="TRASH" />
                           </graphic>
                           <HBox.margin>
                              <Insets right="12.0" />
                           </HBox.margin>
                        </JFXButton>
                        <JFXButton fx:id="btnRecall" contentDisplay="TOP" focusTraversable="false" layoutX="88.0" layoutY="10.0" text="Recall ">
                           <graphic>
                              <FontAwesomeIcon fill="WHITE" glyphName="PLUS" />
                           </graphic>
                        </JFXButton>
                     </children>
                  </HBox>
               </children>
            </AnchorPane>
            <AnchorPane>
               <children>
                  <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                     <children>
                        <Label text="List of Reservation" />
                        <TableView fx:id="table" stylesheets="@../style/style.css">
                           <columns>
                              <TableColumn fx:id="colReservationID" prefWidth="129.0" resizable="false" text="No." />
                              <TableColumn fx:id="colCustomerID" prefWidth="129.0" resizable="false" text="Customer ID" />
                              <TableColumn fx:id="colReservationDate" maxWidth="300.0" minWidth="0.0" prefWidth="259.0" text="Reservation Date" />
                              <TableColumn fx:id="colTitle" maxWidth="300.0" minWidth="0.0" prefWidth="259.0" text="Title" />
                              <TableColumn fx:id="colItemID" maxWidth="300.0" minWidth="0.0" prefWidth="197.0" text="Item ID" />
                              <TableColumn fx:id="colComment" maxWidth="300.0" minWidth="0.0" prefWidth="197.0" text="Comment" />
                           </columns>
                        </TableView>
                     </children>
                  </VBox>
               </children>
               <HBox.margin>
                  <Insets left="24.0" />
               </HBox.margin>
            </AnchorPane>
         </children>
      </HBox>
   </children>
</AnchorPane>
