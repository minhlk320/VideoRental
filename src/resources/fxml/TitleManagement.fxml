<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextArea?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.TitleManagementController">
   <children>
      <HBox spacing="8.0" AnchorPane.bottomAnchor="8.0" AnchorPane.leftAnchor="8.0" AnchorPane.rightAnchor="8.0" AnchorPane.topAnchor="8.0">
         <children>
            <ToolBar orientation="VERTICAL">
               <items>
                  <JFXButton fx:id="btnNew" contentDisplay="TOP" focusTraversable="false" prefWidth="120.0" text="New">
                     <graphic>
                        <FontAwesomeIcon fill="WHITE" glyphName="PLUS" />
                     </graphic>
                  </JFXButton>
                  <JFXButton fx:id="btnSave" contentDisplay="TOP" focusTraversable="false" prefWidth="120.0" text="Save">
                     <graphic>
                        <FontAwesomeIcon fill="WHITE" glyphName="SAVE" />
                     </graphic>
                  </JFXButton>
                  <JFXButton fx:id="btnDelete" contentDisplay="TOP" focusTraversable="false" prefWidth="120.0" text="Delete">
                     <graphic>
                        <FontAwesomeIcon fill="WHITE" glyphName="TRASH" />
                     </graphic>
                  </JFXButton>
               </items>
            </ToolBar>
            <VBox layoutX="10.0" layoutY="10.0" spacing="8.0" HBox.hgrow="ALWAYS">
               <children>
                  <TextField fx:id="txtTitleID" editable="false" focusTraversable="false" layoutX="10.0" layoutY="10.0" maxWidth="1.7976931348623157E308" promptText="No.">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </TextField>
                  <BorderPane>
                     <center>
                        <ImageView fx:id="imageView" fitHeight="180.0" fitWidth="120.0" pickOnBounds="true" BorderPane.alignment="CENTER">
                           <image>
                              <Image url="@../img/default_poster.jpg" />
                           </image>
                           <effect>
                              <DropShadow />
                           </effect>
                        </ImageView>
                     </center>
                     <bottom>
                        <JFXButton fx:id="btnChoose" contentDisplay="TOP" focusTraversable="false" text="Choose" BorderPane.alignment="CENTER">
                           <BorderPane.margin>
                              <Insets />
                           </BorderPane.margin>
                        </JFXButton>
                     </bottom>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </BorderPane>
                  <TextField fx:id="txtTitle" focusTraversable="false" maxWidth="1.7976931348623157E308" promptText="Title">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </TextField>
                  <Text fx:id="lbTitle" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="txtTitle" />
                  <ComboBox fx:id="cbItemClass" maxWidth="1.7976931348623157E308" />
                  <Text fx:id="lbItemID" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Item Class :" />
                  <JFXTextArea fx:id="txtDescription" maxWidth="1.7976931348623157E308" promptText="Description" wrapText="true" />
                              <Text fx:id="lbDescription" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="txtLname" />
               </children>
            </VBox>
            <VBox spacing="8.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label text="List of Titles" />
                  <Button fx:id="btnRefresh" mnemonicParsing="false" text="Refresh" />
                  <TableView fx:id="table" VBox.vgrow="ALWAYS">
                     <columns>
                        <TableColumn fx:id="colTitleID" maxWidth="1.7976931348623157E308" minWidth="60.0" prefWidth="-1.0" resizable="false" text="No." />
                        <TableColumn fx:id="colTitle" maxWidth="1.7976931348623157E308" minWidth="120.0" prefWidth="-1.0" text="Title" />
                        <TableColumn fx:id="colNumOfCopies" maxWidth="1.7976931348623157E308" minWidth="-1.0" prefWidth="-1.0" text="Copies">
                           <columns>
                              <TableColumn fx:id="colAllCopies" minWidth="80.0" resizable="false" text="All copies" />
                              <TableColumn fx:id="colRented" minWidth="80.0" text="Rented" />
                              <TableColumn fx:id="colOnHold" minWidth="80.0" text="On-Hold" />
                              <TableColumn fx:id="colOnShelf" minWidth="80.0" text="On-Shelf" />
                              <TableColumn fx:id="colLost_Damage" minWidth="80.0" text="Lost/Damage" />
                           </columns></TableColumn>
                        <TableColumn fx:id="colItemClass" maxWidth="1.7976931348623157E308" minWidth="80.0" prefWidth="-1.0" text="Item Class" />
                        <TableColumn fx:id="colDescription" maxWidth="1.7976931348623157E308" minWidth="120.0" prefWidth="-1.0" text="Description" />
                     </columns>
                  </TableView>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</AnchorPane>
