                                                        <TableColumn fx:id="colDays" maxWidth="300.0" minWidth="0.0"
                                                                     prefWidth="132.0" text="Days"/>
                                                        <TableColumn fx:id="colLateCharge" maxWidth="300.0"
                                                                     minWidth="0.0" prefWidth="159.0"
                                                                     text="Late Charge"/>
