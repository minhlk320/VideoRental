                              AnchorPane.leftAnchor="12.0" AnchorPane.rightAnchor="12.0" AnchorPane.topAnchor="12.0">
                            <children>
                                <AnchorPane>
                                    <children>
                                        <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                              AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                            <children>
                                                <Label text="List Late charge"/>
                                                <TableView fx:id="table" stylesheets="@../style/style.css">
                                                    <columns>
                                                        <TableColumn fx:id="colNo" resizable="false" text="No."/>
                                                        <TableColumn fx:id="colCustomerID" prefWidth="-1.0"
                                                                     resizable="false" text="Customer ID"/>
                                                        <TableColumn fx:id="colReturnDate" maxWidth="400.0"
